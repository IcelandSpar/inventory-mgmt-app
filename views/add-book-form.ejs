<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <link rel="icon" href="/books.png" type="image/x-icon"/>
    <title>Add Book</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Franklin:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    
</head>
<body>
    <%- include('partials/navbar.ejs') %>
    <img class="bookIconPng" src="/book-icon.png" alt="Book Icon" width="300px" height="300px">
    <img class="controllerIconPng" src="/controller-icon.png" alt="Game Controller Icon" width="300px" height="300px">

    <main class="createFormMainContainer">
        <%- include('partials/errors') %>
        <form action="/create/add-book" method="POST" class="add-book-form">
            <fieldset class="createFieldSet add-bookFieldSet">
                <legend class="selectItemLegend">Add a book to your inventory!</legend>
                <div class="textAuthPubQuantCont">
                    <div class="addBookLabelAndInputCont">
                        <label for="title">Title: </label>
                        <input type="text" id="title" name="title" value="<%= locals.data ? locals.data.title : null %>" required>
                    </div>
                    <div class="addBookLabelAndInputCont">
                        <label for="author">Author: </label>
                        <input type="text" id="author" name="author" value="<%= locals.data ? locals.data.author : null %>" required>
                    </div>
                    <div class="addBookLabelAndInputCont">
                        <label for="publisher">Publisher: </label>
                        <input type="text" id="publisher" name="publisher" value="<%= !locals.data ? null : locals.data.publisher %>" required>
                    </div>
                    <div class="addBookLabelAndInputCont">
                        <label for="quantity">Quantity: </label>
                        <input type="tel" id="quantity" name="quantity" value="<%= !locals.data ? null : locals.data.quantity %>" required>
                    </div>
                </div>
                <div class="addBookLabelAndInputCont">
                    <label for="description">Description: </label>
                    <textarea name="description" id="description" class="add-book-description-textarea"><%= !locals.data ? null : locals.data.description %></textarea>
                </div>
            </fieldset>
            <fieldset  class="createFieldSet">
                <legend class="selectItemLegend">Add book genres below!</legend>
                <div class="addBookLabelAndInputCont">
                    <label for="genres">Genres: </label>
                    <div class="genreCont">

                    </div>
                    <button class="addGenreBtn">Add Genre</button>
                    <script>
                        let inputNumber = 0;
                        const genreCont = document.querySelector('.genreCont');
                        const addGenreBtn = document.querySelector('.addGenreBtn');
                        addGenreBtn.style.cssText = 'background-color: transparent; color: #EEEEEE; border: 2px solid #535C91; font-size: 1rem; cursor: pointer; border-radius: 7px; padding: .7rem 1rem; text-decoration: 2px solid underline; text-underline-offset: .2rem;'
                        addGenreBtn.addEventListener('click', (e) => {

                            e.preventDefault()
                            const newEl = document.createElement('input');
                            newEl.setAttribute('class', `input-number-${inputNumber}`)
                            const wrapperDiv = document.createElement('div')
                            wrapperDiv.setAttribute('class', `wrapper-${inputNumber}`)
                            const removeBtn = document.createElement('button')
                            removeBtn.setAttribute('class', `removeBtn-${inputNumber}`)
                            const removeInputImg = document.createElement('img');
                            removeInputImg.setAttribute('src', '/deleteGoogleIcon.svg')
                            removeInputImg.setAttribute('alt', 'Delete Input icon');
                            newEl.setAttribute('name', 'genre_type')

                            newEl.style.cssText = 'flex-grow: 1; max-width: 100%;'
                            wrapperDiv.style.cssText = 'display: flex; gap: 1rem;'
                            removeBtn.style.cssText = 'background-color: transparent; border: none; cursor: pointer;';
                            removeInputImg.style.cssText = '  filter: invert(10%) sepia(61%) saturate(7434%) hue-rotate(359deg) brightness(103%) contrast(114%);'
                            removeBtn.addEventListener('click', (e) => {
                                e.preventDefault();
                                
                                document.querySelector(`.wrapper-${(Array.from(removeBtn.classList)[0]).slice(10)}`).remove();
                            })
                            
                            genreCont.appendChild(wrapperDiv)
                            wrapperDiv.appendChild(newEl)
                            wrapperDiv.appendChild(removeBtn)
                            removeBtn.appendChild(removeInputImg);
                            inputNumber++
                        })

                        const createGenreInputEvent = new Event('click');
                        addGenreBtn.dispatchEvent(createGenreInputEvent);


                    </script>
                </div>
            </fieldset>
            <fieldset class="createFieldSet">
                <legend class="selectItemLegend">Choose a cover for the book!</legend>
                <div class="addBookLabelAndInputCont addImageUrlCont">
                    <label for="imageUrl">Image URL: </label>
                    <input type="url" id="imageUrl" name="imageUrl" value="<%= !locals.data ? null : locals.data.imageUrl %>">
                </div>
            </fieldset>
            <div class="addBookBtnCont"><button type="submit" class="addBookBtn orangeBtn">Add Book</button></div>
        </form>
    </main>
</body>
</html>